<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoList.Controls.MasterDetail.Views.NewToDoPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Clicked="Save_Clicked" />
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="#"/>
                <Entry x:Name="enNoteId" Text="{Binding NoteId}" Placeholder="Id"/>
            </StackLayout>

            <Entry x:Name="enNoteText" Text="{Binding NoteText}" Placeholder="Description"/>

            <StackLayout Orientation="Horizontal">
                <Label Text="Date Start"/>
                <DatePicker x:Name="dpNoteStart" Date="{Binding NoteStart}"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Date Finish"/>
                <DatePicker x:Name="dpNoteFinish" Date="{Binding NoteFinish}"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>