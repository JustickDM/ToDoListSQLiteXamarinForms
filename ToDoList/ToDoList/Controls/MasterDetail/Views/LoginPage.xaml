<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="ToDoList.Controls.MasterDetail.Views.LoginPage"
			 Title="Login Page">
    <Grid HorizontalOptions="Center" VerticalOptions="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition Width="100"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Entry Grid.ColumnSpan="2" Grid.Row="0" Placeholder="Login" />
        <Entry Grid.ColumnSpan="2" Grid.Row="1" Placeholder="Password" IsPassword="True"/>
        <Button Grid.Column="0" Grid.Row="2" Text="Submit"></Button>
        <Button Grid.Column="1" Grid.Row="2" Text="Cancel"></Button>
    </Grid>
</ContentPage>
